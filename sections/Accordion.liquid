<section class="faq-accordion">
  <h4 class="faq-title">{{ section.settings.heading }}</h4>
  <div class="container">
    <div class="kadha-questions">
      <div class="accordion-container">
        {% for block in section.blocks %}
          <div class="accordion">
            {% if forloop.first == true %}
              <div class="accordion-head active">
                <p>{{ block.settings['accordion-title'] }}</p>
              </div>
              <div class="accordion-content">
                {{ block.settings.description }}
              </div>
            {% else %}
              <div class="accordion-head">
                <p>{{ block.settings['accordion-title'] }}</p>
              </div>
              <div class="accordion-content">
                {{ block.settings.description }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
  $(document).ready(function(){
       $('.accordion-container .accordion:nth-child(1) .accordion-head').addClass('active');
        $('.accordion-container .accordion:nth-child(1) .accordion-content').slideDown();
        $('.accordion-head').on('click', function() {
           if($(this).hasClass('active')) {
           $(this).siblings('.accordion-content').slideUp();
           $(this).removeClass('active');
        }
         else {
           $('.accordion-content').slideUp();
           $('.accordion-head').removeClass('active');
           $(this).siblings('.accordion-content').slideToggle();
           $(this).toggleClass('active');
        }
  });
    })
</script>

<style>
  .faq-accordion{
    padding-top: {{ section.settings.padding_top}}px;
    padding-bottom: {{ section.settings.padding_bottom}}px;
  }
   .faq-accordion .container {
      max-width: 1300px;
      margin: 0 auto;
      padding: 0 20px;
  }
  .faq-accordion {
    background: #f9f9f9;
  }
   .faq-title {
    text-align: center;
    margin: 0 0 30px 0;
    font-weight: 500;
    font-size: 40px;
    line-height: 160%;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    color: #161616;
  }
   .accordion {
      margin-bottom: 10px;
    padding: 0 45px;
  }
    .accordion-head {
      padding: 30px 0;
      position: relative;
      cursor: pointer;
      font-weight: 500;
      font-size: 25px;
      line-height: 37px;
      letter-spacing: 0.02em;
  }
    .accordion-content p {
      font-weight: 400;
      font-size: 22px;
      letter-spacing: 0.02em;
      color: #616161;
      line-height: 36px;
      margin: 0;
      font-family: Heebo,sans-serif!important;
  }
    .accordion-head::before, .accordion-head::after {
      content: '';
      position: absolute;
      top: 50%;
      background-color: #000;
      transition: all .3s;
  }
  .accordion-head::before {
      right: 10px;
      width: 2px;
      height: 22px;
      margin-top: -10px;
  }
    .accordion-head.active::before {
      transform: rotate(90deg);
  }
   .accordion-head::after {
      right: 0;
      width: 22px;
      height: 1px;
      margin-top: 0;
  }
    .accordion-content {
      padding: 0 0 30px 0;
      display: none;
  }
    .accordion-head p {
      margin: 0;
  }
  @media screen and (max-width:749px){
    .faq-title {
      font-size: 28px;
      line-height: 110%;
  }
    .accordion-head {
      font-size: 18px;
      line-height: 24px;
      padding: 20px 0;
  }
    .accordion-content p {
      font-size: 14px;
      line-height: 26px;
  }
    .accordion {
      margin-bottom: 0px;
      padding: 0;
  }
    .accordion-head::before {
      height: 18px;
      margin-top: -8px;
  }
    .accordion-head::after {
      right: 2px;
      width: 18px;
  }
    .faq-accordion{
    padding-top: {{ section.settings.padding_top | divided_by: 2}}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2}}px;
  }
}
</style>

{% schema %}
{
  "name": "Accordion",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "FAQ",
      "label": "Title"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
   {
     "type": "product",
     "name": "accordion",
     "settings": [
       {
         "type": "text",
         "id": "accordion-title",
         "default": "What is a Kadha?",
         "label": "Accordion Title"
       },
       {
         "type": "richtext",
         "id": "description",
         "default": " <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Dolore magnam, nobis consequuntur nemo cupiditate vel sit ducimus quisquam quaerat sint officia ad voluptas consectetur beatae quis illo accusamus vero odit, architecto et.</p>",
         "label": "Description"
       }
     ]
   }
  ],
  "presets":[
    {
      "name": "accordion"
    }
  ]
}
{% endschema %}
