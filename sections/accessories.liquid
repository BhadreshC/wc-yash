      "name": "Add modification",
      "limit": 3,
      "settings": [
          {
            "type": "html",
            "id": "logo-svg",
            "label": "logo svg"
          },
          {
            "type": "text",
            "id": "tools_title",
            "label": "Title"
          },
          {
            "type": "html",
            "id": "points",
            "label": "html"
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "accessories"
    }
  ]
}
{% endschema %}

