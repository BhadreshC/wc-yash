<div class="car_accessories">
  <div class="access_container">
    {% for block in section.blocks %}
      <div class="tool_accessories">
        <div class="tools_svg">
          {{ block.settings['logo-svg'] }}
        </div>
        <h3 class="tools_title">{{ block.settings.tools_title }}</h3>
        <div class="tool_point">{{ block.settings.points }}</div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
    .tool_point li {
    list-style: none;
    font-weight: 300;
    font-size: 22px;
    line-height: 32px;
    letter-spacing: 0.02em;
    color: #000000;
    position: relative;
    font-family: Heebo,sans-serif!important;
  }
  .tool_point li:after {
    content: '';
    position: absolute;
    background-image: url(https://cdn.shopify.com/s/files/1/0514/5283/8047/files/comment_3_1.png?v=1673957140);
    width: 25px;
    height: 25px;
    left: -41px;
    top: 50%;
    transform: translateY(-50%);
  }
  .access_container {
    display: flex;
    justify-content: space-between;
    max-width: 1435px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .tool_accessories {
    padding-right: 120px;
    border-right: 3px solid #f6f4f0;
  }
  .tool_accessories:last-child {
    padding-right: 0;
    border-right: none;
  }
  .car_accessories {
    padding-bottom: 70px;
  }
  @media screen and (max-width:1440px){
    .tool_point li {
      font-size: 18px;
  }
}   
  @media screen and (max-width:1200px){
    .tool_accessories {
      padding-right: 90px;
  }
}
  @media screen and (max-width:1100px){
    .tool_accessories {
      padding-right: 55px;
  }
}
  @media screen and (max-width:989px){
    .tool_accessories {
      border-right: none;
  }
    .tool_point li {
    font-size: 13px;
  }
}
  @media screen and (max-width:749px){
    .access_container {
      flex-wrap: wrap;
  }
    .car_accessories {
      padding-bottom: 40px;
  }
}
</style>

