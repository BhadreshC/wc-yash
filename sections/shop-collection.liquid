<div class="shop_collection">
  <div class="product_content">
    {% for block in section.blocks %}
      <div class="product_box">
        <div class="product_img">
          <img src="{{ block.settings.image | img_url: '' }}" alt="">
        </div>
        <div class="product_details">
          <p>{{ block.settings.description }}</p>
          <h4>{{ block.settings.title }}</h4>
          <a
            href="{{ block.settings.button_link }}"
            class="shop_btn {% if block.settings.view_all_style == 'link' %}link underlined-link{% elsif section.settings.view_all_style == 'solid' %}button{% else %}button button--secondary{% endif %}"
          >
            {{- block.settings.btn_text -}}
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
   .shop_collection {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
   .product_content {
     display: flex;
     justify-content: space-between;
     flex-wrap: wrap;
     margin: 0 20px;
   }
   .product_box {
     width: 50%;
     padding: 0 20px;
     position: relative;
     margin: 0 0 30px 0;
   }
   .product_img img {
     width: 100%;
   }
   .product_details h4 {
     font-weight: 700;
     font-size: 44px;
     line-height: 110%;
     letter-spacing: 0.05em;
     text-transform: uppercase;
     margin: 0 0 23px 0;
     color: #fff;
   }
   .product_details {
     position: absolute;
     bottom: 112px;
     left: 55px;
   }
   .product_details p {
     font-family: 'Rubik' !important;
     font-weight: 700;
     font-size: 18px;
     line-height: 21px;
     letter-spacing: 0.22em;
     text-transform: uppercase;
     color: #fff;
     margin: 0 0 11px 0;
   }
   .shop_btn {
     font-family: 'Rubik';
     font-style: normal;
     font-weight: 500;
     font-size: 16px;
     line-height: 33px;
     letter-spacing: 0.1em;
     text-transform: uppercase;
   }
   @media screen and (max-width:1440px){
     .product_details {
       bottom: 60px;
     }
     .product_details h4 {
       font-size: 32px;
       margin: 0 0 20px 0;
     }
     .product_box {
       padding: 0 10px;
       margin: 0 0 10px 0;
     }
     .shop_btn {
       font-size: 12px;
     }
   }
    @media screen and (max-width:989px){
      .product_content {
       display: block;
     }
      .product_box {
      width: 100%;
    }
      .product_details {
      bottom: 25px;
      left: 25px;
    }
      .product_details h4 {
      font-size: 18px;
      margin: 0 0 10px 0;
    }
      .product_details p {
      font-size: 12px;
      margin: 0 0 0 0;
    }
  }
</style>

{% schema %}
{
  "name": "shop collection",
  "settings": [
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "shop",
      "name": "add product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "description"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button text"
        },
        {
      "type": "select",
      "id": "view_all_style",
      "label": "t:sections.featured-collection.settings.view_all_style.label",
      "options": [
        {
          "value": "link",
          "label": "t:sections.featured-collection.settings.view_all_style.options__1.label"
        },
        {
          "value": "outline",
          "label": "t:sections.featured-collection.settings.view_all_style.options__2.label"
        },
        {
          "value": "solid",
          "label": "t:sections.featured-collection.settings.view_all_style.options__3.label"
        }
      ],
      "default": "solid"
    },
        {
  "type": "url",
  "id": "button_link",
  "label": "Button link"
}
      ]
    }
  ],
  "presets": [
    {
      "name": "shop collection"
    }
  ]
}
{% endschema %}

