<div class="product_logo">
  {% for block in section.blocks %}
    <div class="brand_logo">
      <img src="{{ block.settings.image | img_url: '' }}" alt="">
      <p class="brand_desc">{{ block.settings.description }}</p>
    </div>
  {% endfor %}
</div>

<style>
  .product_logo {
  display: flex;
  align-items: center;
  max-width: 1788px;
  padding-top: 32px;
  padding-bottom: 52px;
  margin: 0 auto;
  padding-left: 20px;
  padding-right: 20px;
  overflow-x: scroll;
  overflow-y: hidden;
  white-space: nowrap;
  }
  .product_logo .slick-slide img {
  display: block;
  margin: 0 auto;
  }
  .brand_logo {
  display: flex;
  align-items: center;
  margin: 0 0 0 101px;
  }
  .brand_logo:first-child {
  margin: 0;
  }
  .template-page-about-us .brand_logo {
  margin: 0 0 0 22px;
  }
  .brand_desc {
  font-weight: 700;
  font-size: 18px;
  line-height: 22px;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  margin: 0 0 0 25px;
  }
  .template-page-about-us .brand_desc {
  text-transform: uppercase;
  margin: 0 0 0 25px;
  font-weight: 500;
  font-size: 22px;
  line-height: 30px;
  letter-spacing: 0.03em;
  font-family: 'Oswald', sans-serif !important;
  }
  .template-page-about-us .social_title {
  font-family: 'Oswald', sans-serif !important;
  }
  .template-page-about-us .image-with-text-container {
  max-width: 1490px;
  padding-left: 20px;
  padding-right: 20px;
  }

</style>

{% schema %}
{
  "name": "product logo",
  "settings": [
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "logo image",
      "settings": [
        {
      "type": "image_picker",
      "id": "image",
      "label": "image"
        },
        {
          "type": "text",
          "id": "description",
          "label": "description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "product logo"
    }
  ]
}
{% endschema %}

