<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="page-with-image  section-{{ section.id }}-padding">
  <div class="image-text-page">
    <div class="pg_bg_img">

      
      {% if page.metafields.custom.page_image != blank %}
        {{
        page.metafields.custom.page_image
        | image_url: width: 1500
        | image_tag:
          loading: 'lazy',
          width: page.metafields.custom.page_image.width,
          height: image_height,
          class: image_class,
          sizes: sizes,
          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
          alt: section.settings.image.alt
        | escape
      }}
      {% endif %}  
    </div>
    <div class="pg_text_title">
      <p class="page_info">{{ section.settings.heading_desc }}</p>
      <p class="page_bg_title">{{ section.settings.heading }}</p>
    </div>
  </div>
  {% comment %}
    <h1 class="main-page-title page-title h0">
      {{ page.title | escape }}
    </h1>
  {% endcomment %}
  <div class="rte page-width condition-page">
    {{ page.content }}
  </div>
</div>

<style>
  .page_info {
    font-weight: 400;
    font-size: 15px;
    line-height: 22px;
    letter-spacing: 0.03em;
    margin: 0 0 10px 0;
    color: #fff;
  }
  .page_bg_title {
    font-weight: 700;
    font-size: 60px;
    line-height: 73px;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    margin: 0;
    color: #fff;
  }
  .image-text-page {
    position: relative;
  }
  .pg_text_title {
    position: absolute;
    bottom: 50px;
    left: 150px;
  }
  .condition-page {
    padding-top: 90px;
  }
  .condition-page h3 {
    font-weight: 600;
    font-size: 22px;
    line-height: 135.7%;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    margin: 0 0 10px 0;
    font-family: 'Montserrat', sans-serif !important;
  }
  .condition-page p {
    font-weight: 400;
    font-size: 17px;
    line-height: 30px;
    letter-spacing: 0.03em;
    font-family: 'Heebo', sans-serif !important;
    margin: 0 0 30px 0;
  }
  @media screen and (max-width: 1440px){
    .pg_text_title {
      left: 20px;
    }
    
  }
  @media screen and (max-width: 989px){
    .pg_bg_img img {
      height: 39rem;
      width: 100%;
      object-fit: cover;
    }
    .pg_text_title {
      bottom: 50%;
      left: 50%;
      transform: translate(-50%, 50%);
      width: 37rem;
      text-align: center;
    }
  }
  @media screen and (max-width: 749px){
    .condition-page p {
      font-size: 14px;
      line-height: 22px;
    }
    .condition-page h3 {
      font-size: 18px;
      line-height: 122.7%;
    }
    .condition-page {
      padding-top: 40px;
    }
    
  }

</style>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label":"image"
    },
    {
      "type": "text",
      "id": "heading_desc",
      "label": "text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "title"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
